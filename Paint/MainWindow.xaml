<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon" 
        xmlns:local="clr-namespace:Paint"
        xmlns:syncfusion=" http://schemas.syncfusion.com/wpf" x:Class="Paint.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Paint" Icon="./images/paint.png" Height="800" Width="1000" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <TextBlock x:Key="CursorPaint" Cursor="./images/paint.cur"/>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <ribbon:Ribbon Name="RibbonBar" DockPanel.Dock="Top" MouseMove="Ribbon_MouseMove">
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonSplitButton  x:Name="openButton" Click="openButton_Click" SmallImageSource="./images/folder.png" >
                        <RibbonSplitMenuItem Header="Open file" Click="openButton_Click" ImageSource="./images/folder.png" Margin="0,10,0,5"/>
                        <RibbonSplitMenuItem Header="Insert Image" x:Name="importButton" Click="importButton_Click" ImageSource="./images/import.png" Margin="0,5,0,10"/>
                    </RibbonSplitButton>
                    <RibbonSplitButton  x:Name="saveButton" Click="saveButton_Click" SmallImageSource="./images/save.png" Margin="10,0,0,0">
                        <RibbonSplitMenuItem Header="Save file" Click="saveButton_Click" ImageSource="./images/save.png" Margin="0,10,0,5"/>
                        <RibbonSplitMenuItem Header="Save as image" x:Name="exportButton" Click="exportButton_Click" ImageSource="./images/export.png" Margin="0,5,0,10"/>
                    </RibbonSplitButton>
                    <RibbonButton x:Name="undoButton" Click="undoButton_Click" SmallImageSource="./images/undo.png" Margin="10,0,0,0"/>
                    <RibbonButton x:Name="redoButton" Click="redoButton_Click" SmallImageSource="./images/redo.png" Margin="10,0,0,0"/>
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>

            <ribbon:RibbonTab Header="Home">
                <ribbon:RibbonGroup Header="Clipboard">
                    <ribbon:RibbonButton Margin="5" Label="Paste"  LargeImageSource="./images/paste.png"/>
                    <ribbon:RibbonButton Margin="5" Label=" Cut" SmallImageSource="./images/cut.png"/>
                    <ribbon:RibbonButton Margin="5" Label=" Copy" SmallImageSource="./images/copy.png"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Canvas">
                    <ribbon:RibbonButton Name="zoomInButton" Click="zoomInButton_Click" Margin="5" Label=" Zoom In" SmallImageSource="./images/zoomin.png"/>
                    <ribbon:RibbonButton Name="zoomOutButton" Click="zoomOutButton_Click" Margin="5" Label=" Zoom Out" SmallImageSource="./images/zoomout.png"/>
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Tool">
                    <StackPanel Orientation="Horizontal">
